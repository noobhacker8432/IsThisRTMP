{
  "name": "RTMP",
  "keywords": [
    "node",
    "FFmpeg"
  ],
  "env": {
    "KEYRTMP": {
      "description": "RTMP server url with key",
      "required": true
    },
    "URLSRC": {
      "description": "Src to Broadcast",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ]
}
